<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/tv_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:textSize="22sp"
    android:textStyle="bold"
    android:text="@string/tip_header"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/et_guests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:inputType="number"
    android:background="@drawable/custom_edit_text"
    android:drawableStart="@drawable/guests_icon"
    android:drawablePadding="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_header"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:hint="@string/hint_guests"/>

  <EditText
    android:id="@+id/et_bill"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_12"
    android:background="@drawable/custom_edit_text"
    android:drawableStart="@drawable/bill_icon"
    android:drawablePadding="@dimen/dimen_4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_guests"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:inputType="numberDecimal"
    android:hint="@string/hint_bill"/>

  <EditText
    android:id="@+id/et_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_12"
    android:inputType="numberDecimal"
    android:background="@drawable/custom_edit_text"
    android:drawableStart="@drawable/tip_icon"
    android:drawablePadding="@dimen/dimen_4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_bill"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:hint="@string/hint_tip20"/>

  <TextView
    android:id="@+id/tv_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_12"
    android:background="@drawable/custom_edit_text"
    android:drawableStart="@drawable/total_bill"
    android:drawablePadding="@dimen/dimen_4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_tip"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5" />

  <Button
    android:id="@+id/btn_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_12"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_total"
    android:textColor="@color/white"
    android:text="@string/calculate_total"
    android:background="@color/colorPrimaryDark" />

</androidx.constraintlayout.widget.ConstraintLayout>